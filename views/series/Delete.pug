extends ../layout

block content
    h2 Delete
    h3 Are you sure you want to delete this?
    div
        h4 Serie
        hr
        dl(class="dl-horizontal")
            dt Nombre
            dd #{serie.nombre}

            dt Fecha de Estreno
            dd #{serie.fechaEstreno}

            dt ¿Está en emisíon?
            dd
                if serie.enEmision
                    span(class="label label-success") En emision
                else
                    span(class="label label-danger") Finalizada
            dt Género
            dd #{serie.genero}

        div
            form(action='/series/delete/' + serie.serieID + '?_method=DELETE' method='POST')
                button(type='submit' class='btn btn-danger') Borrar
